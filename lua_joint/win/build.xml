<project basedir="." default="all">

	<target name="all" depends="dist" />

    <target name="init">
		<tstamp>
			<format property="timestamp" pattern="yyyyMMddHHmm"/>
		</tstamp>
	    <property name="target.prefix" value="lua_joint" />
	    <property name="target.suffix" value="v${timestamp}" />
	</target>

	<target name="clean">
		<delete>
			<fileset dir=".">
			    <include name="*.dll" />
			    <include name="*.zip" />
			</fileset>    
		</delete>
	</target>

	<target name="build">
	    <exec command="build.bat" />
	</target>
		
	<target name="dist" depends="init,build">
		<zip zipfile="${target.prefix}-win-${target.suffix}.zip">
			<zipfileset dir="." prefix="${target.prefix}">
				<include name="lua_joint.dll" />
			</zipfileset>
		</zip>
	</target>

</project>
